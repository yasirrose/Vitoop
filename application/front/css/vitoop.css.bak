.ui-dialog .ui-dialog-content {
	padding: 0em !important;
}

.vtp-logo {
	font-family: Merriweather, 'Times New Roman', serif;
	font-weight: 700;
	font-size: 200%;
	color: #2D81FF;
	border: 0 none;
}

.vtp-logo span {
	font-weight: 300;
	font-size: 50%;
}

#vtp-application {
	margin: auto;
	margin-top: 3px;
	min-width: 960px;
	max-width: 1140px;
	padding: 9px;
	padding-top: 5px;
	border-width: 1px;
	border-style: solid;
	border-color: #87ceeb;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
}

.vtp-paddingbox {
	padding: 5px 0px 2px 0px;
}

.vtp-layout {
	background:
		url("custom-theme/images/ui-bg_highlight-soft_75_c8e2f4_1x100.png")
		repeat-x scroll;
	background-color: hsl(205, 67%, 87%);
	border-radius: 5px;
	padding: 15px;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 100%;
	color: hsl(216, 100%, 59%);
	text-shadow: 1px 1px 1px hsla(216, 100%, 59%, 0.5);
}

nav.vtp-layout {
	padding: 0px;
	font-size: 0.8em;
	margin-bottom: -8px;
	margin-top: 17px;
}

#content {

	min-height: 300px;
}

#content h1 {
	margin: 0em;
	padding: 3px;
	text-align: center;
	border-width: 1px;
	border-style: solid;
	border-color: #87ceeb;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
}

form {
	font-size: 0.9em;
	padding: 0px;
	width: auto;
	margin: auto;
	/*border-radius: 10px; */
	background-color: hsl(205, 67%, 87%);
}

form label {
	font-size: 0.7em;
	margin-left: 25px;
	margin-top: 8px;
	/* wie bekommt man die Label auf den untere Kante der Inputs ????*/
	float: left;
	width: 100px;
	cursor: pointer;
}

form input{ /*[type=text] --------- Form - Inputs -------------*/
	font-size: 0.85em;
	margin-top: 4px;
	width: 470px;
	padding: 3px 0px 1px 4px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	-khtml-border-radius: 5px;
	border-radius: 5px;
}

form select { 
   font-size: 0.85em;
   margin-top: 4px;
   width: 200px;
   padding: 3px 0px 1px 4px;
   -moz-border-radius: 5px;
   -webkit-border-radius: 5px;
   -khtml-border-radius: 5px;
   border-radius: 5px;
}

form textarea {
	font-size: 0.9em;
	width: 480px;
	height: 300px;
	padding: 3px 0px 3px 4px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	-khtml-border-radius: 5px;
	border-radius: 5px;
}


/*.vtp-form input[type="submit"]{       ------------- DAS ist der BUTTON -------------- 
   -moz-border-radius: 5px;
   -webkit-border-radius: 5px;
   -khtml-border-radius: 5px;
   border-radius: 5px;
   width: 100px;
   --- margin: 5px; 
   padding: 5px;
	 cursor:pointer;
   float: left;
} */
form input[type="submit"] {
	font-family: Arial;
	color: #ffffff;
	font-size: 13px;
	text-decoration: none;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	-khtml-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: 0px 1px 3px #666666;
	-moz-box-shadow: 0px 1px 3px #666666;
	text-shadow: 1px 1px 3px #666666;
	border: solid #003366 1px;
	background: -webkit-gradient(linear, 0 0, 0 100%, from(#42aaff),
		to(#003366) );
	background: -moz-linear-gradient(top, #42aaff, #003366);
	width: 70px;
	height: 26px;
	/*margin: 5px; */
	padding: 1px;
	cursor: pointer;
	float: right;
	margin-right: 43px;
	margin-bottom: 7px;
}

.button:hover {
	background: #42aaff;
}

/*----------------------------------------------------------------*/
.vtp-tagbox {
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	-khtml-border-radius: 5px;
	border-radius: 5px;
	border-style: solid;
	border-color: hsla(216, 100%, 59%, 0.5);
	border-width: 3px;
	font-size: 0.8em;
	margin-top: 30px;
	margin: 5px;
	padding: 5px;
	min-height: 20px;
	max-height: 60px;
	overflow: auto;
	clear: right;
}

.vtp-projectbox,.vtp-lexiconbox {
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	-khtml-border-radius: 5px;
	border-radius: 5px;
	border-style: solid;
	border-color: hsla(216, 100%, 59%, 0.5);
	border-width: 3px;
	font-size: 0.8em;
	margin-top: 30px;
	margin: 5px;
	padding: 5px;
	width: 40%;
	min-height: 20px;
	max-height: 100px;
	overflow: auto;
	clear: right;
}

.vtp-gui-hide {
	display: none !important;
}

.vtp-odd {
	background-color: #ffffff;
}

.vtp-even {
	background-color: #c8e2f4;
}

thead>tr,tfoot>tr,.tanz {
	background-color: hsla(216, 100%, 59%, 0.5);
	border-radius: 30px;
}

td {
	height: 35px;
	padding-left: 3px;
}

.detailpopup {
	cursor: pointer;
}

.tobitest {
	background-color: hsl(216, 100%, 59%);
}

fieldset {
	border: 2px solid #ffffff;
}

legend {
	padding: 10px;
}