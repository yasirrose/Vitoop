	border-bottom-left-radius: 0px !important;
	border-bottom: none;
}

.vtp-feldset {
	width: 625px;
	margin: 10px;
	margin-top: 0;
}

#address_zip,#address_contact1,#address_contact3 {
	/*  Adresse: PLZ, Telefon, Fax*/
	width: 125px;
	float: left;
	margin-right: 40px;
}

#address_city,#address_contact2,#address_contact4 {
	/* form Adresse: Stadt, Mobil, Email*/
	width: 222px;
	float: left;
	margin-left: -50px;
}

#address_country { /* form Adresse: L�nderauswahl*/
	width: 478px;
	margin-top: 5px;
	margin-bottom: 20px;
}

#tag_text {
	/* alle Popup-forms: Input in dem das Stichwort eingegeben wird */
	width: 330px;
	float: left;
}

#rating_mark {
	float: left;
}
/* ---------------------------------------------------------------*/
.ui-dialog-title { /* ge�nderte ui-class f�r header vom Popup*/
	font-size: 0.8em;
}

.ui-tabs .ui-tabs-panel {
	/* ge�nderte ui-class f�r content vom Popup  -- .ui-tabs .ui-tabs-panel */
	padding: 0em !important;
	-moz-border-radius-bottom: 0px !important;
	-webkit-border-radius-bottom: 0px !important;
