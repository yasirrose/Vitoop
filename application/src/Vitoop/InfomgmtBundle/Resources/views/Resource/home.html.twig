{% extends "VitoopInfomgmtBundle:Resource:layout.html.twig" %}
{% block cmstitle %}
    {% if project is defined %}
        <div id="vtp-projectdata-title" class="ui-corner-all">
            <span>Projekt: {{ project.name }}</span><input type="hidden" id="projectID" value="{{ project.id }}"/>
            {% if (showasprojectowner is not null) and (showasprojectowner) %}
                <span id="vtp-projectdata-project-live" class="ui-icon ui-icon-clipboard ui-corner-all"></span>
                <span id="vtp-projectdata-project-edit" class="ui-icon ui-icon-wrench ui-corner-all"></span>
            {% endif %}
            <button id="vtp-projectdata-project-close" class=""></button>
        </div>
    {% endif %}
    {% if lexicon is defined %}
        <div id="vtp-lexicondata-title" class="ui-corner-all">
            <span>Lexikon: {{ lexicon.name }}</span> 
            <button id="vtp-lexicondata-lexicon-close" class=""></button>
        </div>
    {% endif %}
{% endblock %}
{% block content %}
    {% include homecontenttpl %}
{% endblock %}
