{% for adr in resources %}
    <tr id="adr-{{ adr.id }}" class="ui-corner-all vtp-uiaction-list-showdetail">
        <td class="ui-corner-left">
            {% if (editMode is defined) and (editMode) %}
                <input type="text" id="coef-{{ attribute(coefficients, adr.id).rel_id }}" data-rel_id="{{ attribute(coefficients, adr.id).rel_id }}" data-original="{{ attribute(coefficients, adr.id).coefficient }}" value="{{ attribute(coefficients, adr.id).coefficient }}" class="vtp-uiaction-coefficient vtp-fh-w85"/>
            {% else %}
                {% if coefficients is defined %}
                    <input type="text" id="coef-{{ attribute(coefficients, adr.id).rel_id }}" data-rel_id="{{ attribute(coefficients, adr.id).rel_id }}" value="{{ attribute(coefficients, adr.id).coefficient }}" class="vtp-uiaction-coefficient vtp-fh-w85" disabled="disabled"/>
                    {% else %}
                    {{ adr.created_at|date("d.m.y") }}
                {% endif %}
            {% endif %}
        </td>
        <td title="{{ adr.name }}">
            <div class="vtp-teasefader-wrapper">
                {{ adr.name }}
                <div class="vtp-teasefader"></div>
            </div>
        </td>
        <td>{{ adr.zip }}</td>
        <td title="{{ adr.city }}">
            <div class="vtp-teasefader-wrapper">
                {{ adr.city }}
                <div class="vtp-teasefader"></div>
            </div>
        </td>
        <td data-order="{{ adr.avgmark }}">
            <div class="vtp-rating-image-small" title="{{ adr.avgmark|avgmarkhint }}"
                 style="background-image: url('{{ asset('/img/rating/'~avgimg(adr.avgmark)) }}');">
                <span>&nbsp;</span>
            </div>
        </td>
        <td>{{ adr.res12count }}</td>
        <td>{{ adr.username }}</td>
        <td class="ui-corner-right">
            {% if editMode is defined and editMode %}
                <span class="vtp-projectdata-unlink ui-icon ui-icon-close ui-corner-all" onclick="unlinkRes({{ adr.id }})"></span>
            {% else %}
                <a class="vtp-extlink vtp-uiaction-open-extlink ui-icon ui-icon-extlink" href="http://mapof.it/g/{{ [adr.street, adr.zip, adr.city, adr.country]|join(', ') }}" target="_blank">-></a>
            {% endif %}
        </td>
    </tr>
{% endfor %}