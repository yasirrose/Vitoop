{% for prjTop in resources %}
    {% set prj = prjTop[0] %}
    <tr id="prj-{{ prj.id }}" class="ui-corner-all vtp-uiaction-list-showdetail">
        <td class="ui-corner-left">
            {% if (editMode is defined) and (editMode) %}
                <input type="text" id="coef-{{ attribute(coefficients, prj.id).rel_id }}" data-rel_id="{{ attribute(coefficients, prj.id).rel_id }}" data-original="{{ attribute(coefficients, prj.id).coefficient }}" value="{{ attribute(coefficients, prj.id).coefficient }}" class="vtp-uiaction-coefficient vtp-fh-w85"/>
            {% else %}
                {% if coefficients is defined %}
                    <input type="text" id="coef-{{ attribute(coefficients, prj.id).rel_id }}" data-rel_id="{{ attribute(coefficients, prj.id).rel_id }}" value="{{ attribute(coefficients, prj.id).coefficient }}" class="vtp-uiaction-coefficient vtp-fh-w85" disabled="disabled"/>
                {% else %}
                    {{ prj.createdat|date("d.m.y") }}
                {% endif %}
            {% endif %}
        </td>
        <td title="{{ prj.name }}">
            <div class="vtp-teasefader-wrapper">
                {{ prj.name }}
                <div class="vtp-teasefader"></div>
            </div>
        </td>
        <td title="{{ prj.user.username }}">
            <div class="vtp-teasefader-wrapper">
                {{ prj.user.username }}
                <div class="vtp-teasefader"></div>
            </div>
        </td>
        <td data-order="{{ prjTop.avgmark }}">
            <div class="vtp-rating-image-small" title="{{ prjTop.avgmark|avgmarkhint }}"
                 style="background-image: url('{{ asset('/img/rating/'~avgimg(prjTop.avgmark)) }}');">
                <span>&nbsp;</span>
            </div>
        </td>
        <td>{{ prjTop.res12count }}</td>
        <td class="ui-corner-right">
            {% if editMode is defined and editMode %}
                <span class="vtp-projectdata-unlink ui-icon ui-icon-close ui-corner-all" onclick="unlinkRes({{ prj.id }})"></span>
            {% else %}
                {% if prj.getProjectData is null or prj.getProjectData.availableForReading(user) %}
                    <a class="vtp-extlink vtp-uiaction-open-extlink ui-icon ui-icon-extlink" href="{{ path('_home_project', {'project_id': prj.id}) }}" target="_self">-></a>
                {% else %}
                    <span class="vtp-extlink vtp-uiaction-open-extlink ui-icon ui-icon-extlink" style="background-color: #DDDDDD">-></span>
                {% endif %}
            {% endif %}
        </td>
    </tr>
{% endfor %}