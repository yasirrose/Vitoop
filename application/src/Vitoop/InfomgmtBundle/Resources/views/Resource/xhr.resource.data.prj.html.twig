{# VitoopInfomgmtBundle:Resource:xhr.resource.data.prj.html.twig #}
{{ form_start(fvdata, {'attr': {'id': 'vtp-form-data', 'novalidate': 'novalidate' }}) }}
<fieldset class="ui-corner-all">
    <legend>{{ res.resourcename }}</legend>
    {% if infodata is not empty %}
        <div class="vtp-uiinfo-info ui-state-highlight ui-corner-all">
            <span class="vtp-icon ui-icon ui-icon-info"></span>{{ infodata }}
        </div>
    {% endif %}
    {{ form_errors(fvdata) }}
    <div class="vtp-fh-top">
        {{ form_label(fvdata.name, null, {'label_attr': {'class': 'vtp-fh-w20' }}) }}
        {{ form_widget(fvdata.name, {'attr': {'class': 'vtp-fh-w80' }}) }}
        <div class="vtp-uiinfo-form-error">{{ form_errors(fvdata.name) }}</div>
    </div>
    <div class="vtp-fh-middle">
        {{ form_label(fvdata.description, null, {'label_attr': {'class': 'vtp-fh-w20' }}) }}
        {{ form_widget(fvdata.description, {'attr': {'class': 'vtp-fh-w80', 'rows': '10' }}) }}
        <div class="vtp-uiinfo-form-error">{{ form_errors(fvdata.description) }}</div>
    </div>
    <div class="vtp-fh-bottom created-info-project">
        <div class="vtp-fh-infosave-box vtp-fh-w95">
           {{ form_widget(fvdata.isUserHook) }}
            <span class="blau blau-text">blau</span><span class="blau-text">&nbsp;&nbsp;|&nbsp;&nbsp;Eingetragen am: {{ res.createdat|date('d.m.Y') }}{% if res.getUser is not null %}&nbsp;&nbsp;|&nbsp;&nbsp;von: {{ res.getUser.getUsername }}{% endif %}&nbsp;&nbsp;|&nbsp;&nbsp;ID: {{ res.getId }}</span>
        </div>
    </div>
    <div class="vtp-fh-bottom">
        <div class="vtp-fh-w75"></div>
        {% if isShowSave %}
        <div class="vtp-fh-right vtp-fh-w25">
            {{ form_widget(fvdata.save, {'attr': {'class': 'vtp-uiinfo-anchor' }}) }}
        </div>
        {% else %}
            {% do fvdata.save.setRendered %}
        {%endif%}
    </div>
</fieldset>
{{ form_end(fvdata) }}