{# VitoopInfomgmtBundle:Resource:xhr.resource.data.teli.html.twig #}
{{ form_start(fvdata, {'attr': {'id': 'vtp-form-data', 'novalidate': 'novalidate' }}) }}
<fieldset class="ui-corner-all">
    <legend>{{ res.resourcename }}</legend>
    {% if infodata is not empty %}
        <div class="vtp-uiinfo-info ui-state-highlight ui-corner-all">
            <span class="vtp-icon ui-icon ui-icon-info"></span>{{ infodata }}
        </div>
    {% endif %}
    <ul id="unique-url-error" style="display: none">
        <li>Diese Url existiert schon. (Id# <span id="unique-url-error-id"></span> "<span id="unique-url-error-name"></span>")</li>
    </ul>
    {{ form_errors(fvdata) }}
    <div class="vtp-fh-top">
        {{ form_label(fvdata.name, null, {'label_attr': {'class': 'vtp-fh-w15' }}) }}
        {{ form_widget(fvdata.name, {'attr': {'class': 'vtp-fh-w85' }}) }}
        <div class="vtp-uiinfo-form-error">{{ form_errors(fvdata.name) }}</div>
    </div>
    <div class="vtp-fh-middle">
        {{ form_label(fvdata.author, null, {'label_attr': {'class': 'vtp-fh-w15' }}) }}
        {{ form_widget(fvdata.author, {'attr': {'class': 'vtp-fh-w85' }}) }}
        <div class="vtp-uiinfo-form-error">{{ form_errors(fvdata.author) }}</div>
    </div>
    <div class="vtp-fh-middle">
        {{ form_label(fvdata.url, null, {'label_attr': {'class': 'vtp-fh-w15' }}) }}
        {% if isNew %}
            {{ form_widget(fvdata.url, {'attr': {'class': 'vtp-fh-w85', 'onblur': 'checkUniqueUrl("teli", event);' }}) }}
        {% else %}
            {{ form_widget(fvdata.url, {'attr': {'class': 'vtp-fh-w75', 'onblur': 'checkUniqueUrl("teli", event);', 'style': 'width: 77.7%' }}) }}
            <div class="vtp-fh-right vtp-fh-w0"><a href="{{ res.url }}" target="_blank" class="vtp-uiaction-open-url vtp-button">URL Ã¶ffnen</a></div>
        {% endif %}
        <div class="vtp-uiinfo-form-error">{{ form_errors(fvdata.url) }}</div>
    </div>
    <div class="vtp-fh-middle">
        {{ form_label(fvdata.releaseDate, null, {'label_attr': {'class': 'vtp-fh-w15' }}) }}
        {{ form_widget(fvdata.releaseDate, {'attr': {'class': 'vtp-fh-w20' }}) }}
        <div class="vtp-fh-w35"></div>
        {{ form_label(fvdata.lang, null, {'label_attr': {'class': 'vtp-fh-w10' }}) }}
        {{ form_widget(fvdata.lang, {'attr': {'class': 'vtp-fh-w20' }}) }}
    </div>
    <div>
        <div class="vtp-uiinfo-form-error">{{ form_errors(fvdata.releaseDate) }}</div>
        <div class="vtp-uiinfo-form-error">{{ form_errors(fvdata.lang) }}</div>
    </div>
    <div class="vtp-fh-bottom created-info">
        <div class="vtp-fh-infosave-box vtp-fh-w95">
            {{ form_widget(fvdata.isUserHook) }}
            <span class="blau blau-text">blau</span><span class="blau-text">&nbsp;&nbsp;|&nbsp;&nbsp;Eingetragen am: {{ res.createdat|date('d.m.Y') }}{% if res.getUser is not null %}&nbsp;&nbsp;|&nbsp;&nbsp;von: {{ res.getUser.getUsername }}{% endif %}&nbsp;&nbsp;|&nbsp;&nbsp;ID: {{ res.getId }}</span>
        </div>
    </div>
    <div class="vtp-fh-bottom">
        <div class="vtp-fh-w70"></div>
        {% if isShowSave %}
        <div class="vtp-fh-right vtp-fh-w30">
            {{ form_widget(fvdata.save, {'attr': {'class': 'vtp-uiinfo-anchor' }}) }}
        </div>
        {% else %}
            {% do fvdata.save.setRendered %}
        {%endif%}
    </div>
</fieldset>
{{ form_end(fvdata) }}