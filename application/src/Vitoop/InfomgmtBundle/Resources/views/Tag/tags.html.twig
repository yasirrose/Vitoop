{% extends "VitoopInfomgmtBundle:Tag:layout.html.twig" %}
{% block content %}
<div id="vtp-res-tags">
    <table id="tags-list" class="dataTable table-datatables">
        <thead>
        <tr style="">
            <th style="width: 29%" class="ui-state-default">Tag:</th>
            <th class="ui-state-default">X</th>
            <th class="ui-state-default">Projekt:</th>
            <th class="ui-state-default">Lexicon:</th>
            <th class="ui-state-default">Pdf:</th>
            <th class="ui-state-default">Textlink:</th>
            <th class="ui-state-default">Link:</th>
            <th class="ui-state-default">Buch:</th>
            <th class="ui-state-default">Adresse:</th>
        </tr>
        </thead>
        {% for tag in tags %}
            <tr class="{% if loop.index is even %}even{% else %}odd{% endif %} ui-corner-all">
                <td>{{ tag['text'] }}:</td>
                <td>{{ tag['cnt'] }}</td>
                <td>{{ tag['prjc'] }}</td>
                <td>{{ tag['lexc'] }}</td>
                <td>{{ tag['pdfc'] }}</td>
                <td>{{ tag['telic'] }}</td>
                <td>{{ tag['linkc'] }}</td>
                <td>{{ tag['bookc'] }}</td>
                <td>{{ tag['adrc'] }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}