{% extends "VitoopInfomgmtBundle:Resource:layout.html.twig" %}
{% block title %}Registrierung{% endblock %}
{% block content %}
    <div id="vtp-login" class="ui-corner-all">        
        <form action="{{ path('forgot_password') }}" method="post" enctype="application/x-www-form-urlencoded">
            <div class="vtp-fh-top">                
                <label for="email" class="vtp-fh-w40">Email:</label>
                <input class="vtp-fh-w60" type="email" name="email" id="email" required>                
            </div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="ui-state-highlight ui-corner-all">
                {{ flashMessage }}
            </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('sucess') %}
                <div class="vtp-uiinfo">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="vtp-submit-wrapper" style="text-align: right">
                <input value="senden" type="submit" class="ui-corner-all ui-state-default">
            </div>
        </form>
    </div>
{% endblock %}