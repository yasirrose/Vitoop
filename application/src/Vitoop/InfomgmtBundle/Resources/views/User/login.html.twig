<div id="vtp-login" class="ui-corner-all">
    <form action="{{ path('_login_check') }}" method="post" enctype="application/x-www-form-urlencoded">
        <div class="vtp-fh-top">
            <label for="username" class="vtp-fh-w40">Benutzername:</label>
            <input id="username" class="vtp-fh-w40" name="_username" type="text" value="{{ last_username }}">
        </div>
        <div class="vtp-fh-bottom">
            <label for="password" class="vtp-fh-w40">Passwort:</label>
            <input id="password" class="vtp-fh-w60" name="_password" type="password">
        </div>
        {% if error %}
            <div class="ui-state-highlight ui-corner-all">{{ error.message|trans({}, 'messages') }}</div>
        {% endif %}
        {#
             If you want to control the URL the user is redirected to on success (more details below)
             <input type="hidden" name="_target_path" value="/account" />
        #}
        <div class="vtp-submit-wrapper">
            <input value="anmelden" type="submit">
        </div>
    </form>
</div>
